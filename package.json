  "description": "",
  "main": "instrument.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:all": "npm --prefix app install && npm --prefix api install",
    "start:api": "npm --prefix api run dev",
    "start:app:static": "node -e \"const http = require('http'), fs=require('fs'), p='app/index.html'; http.createServer((r,s)=>{ if(r.url=='/'){ s.writeHead(200,{'Content-Type':'text/html'}); s.end(fs.readFileSync(p)); } else { s.writeHead(404); s.end(); }}).listen(8080); console.log('Static server on http://localhost:8080');\"",
    "dev": "concurrently \"npm: start:api\" \"npm: start:app:static\"",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint"
  },
