{
  "name": "cross-platform-assignment",
  "version": "1.0.0",
  "description": "",
  "main": "instrument.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:all": "npm --prefix app install && npm --prefix api install",
    "start:api": "npm --prefix api run dev",
    "start:app:static": "node -e \"const http = require('http'), fs=require('fs'), p='app/index.html'; http.createServer((r,s)=>{ if(r.url=='/'){ s.writeHead(200,{'Content-Type':'text/html'}); s.end(fs.readFileSync(p)); } else { s.writeHead(404); s.end(); }}).listen(8080); console.log('Static server on http://localhost:8080');\"",
    "dev": "concurrently \"npm: start:api\" \"npm: start:app:static\"",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "lint": "ng lint",
    "build:tailwind": "npx @tailwindcss/cli -i ./src/style/styles.css -o ./src/assets/css/universal.css --minify",
    "watch:tailwind": "npx @tailwindcss/cli -i ./src/style/styles.css -o ./src/assets/css/universal.css --watch",
    "build:algolia": "esbuild src/ts/algolia.ts --bundle --minify --sourcemap --outfile=assets/js/algolia.js",
    "watch:algolia": "npx esbuild src/ts/Algolia.ts --bundle --outfile=assets/js/Algolia.js --watch",
    "build:chatbot": "esbuild src/ts/chatbot.ts --bundle --minify --sourcemap --outfile=assets/js/chatbot.js",
    "build:all-scripts": "npm run build:algolia && npm run build:chatbot"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Test-Plus-XD/Cross-Platform-Assignment.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Test-Plus-XD/Cross-Platform-Assignment/issues"
  },
  "homepage": "https://github.com/Test-Plus-XD/Cross-Platform-Assignment#readme",
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@ionic/angular": "^8.7.5",
    "@ionic/angular-server": "^8.7.5",
    "algoliasearch": "^5.38.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "firebase": "^12.3.0",
    "instantsearch.js": "^4.80.0",
    "ionicons": "^7.0.0",
    "npm-check-updates": "^18.3.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.0",
    "@angular-eslint/builder": "20.3.0",
